@model IEnumerable<Hiidi_Zone_Ecommerce.Data.DanhMuc>

@{
    ViewData["Title"] = "Danh sách danh mục";
    Layout = "~/Views/Shared/Layout/Admin/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-3">Danh sách danh mục</h1>

    <p>
        <a asp-action="Create" class="btn btn-success">➕ Thêm mới</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Danh mục</th>
                <th>Mô tả danh mục</th>
                <th class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Ten)</td>
                    <td>@Html.DisplayFor(modelItem => item.MoTa)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️ Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">📄 Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xóa danh mục này?');">🗑️ Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

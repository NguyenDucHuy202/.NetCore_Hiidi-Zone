@model Hiidi_Zone_Ecommerce.Data.NguoiDung

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/Layout/Admin/_LayoutAdmin.cshtml";
}

<h1 class="text-danger">Delete User</h1>

<div class="alert alert-warning">
    <strong>Warning!</strong> Are you sure you want to delete this user? This action cannot be undone.
</div>

<div class="card shadow-sm p-4">
    <h4 class="card-title text-primary">User Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3 fw-bold">Name</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Ten)</dd>

        <dt class="col-sm-3 fw-bold">Email</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-3 fw-bold">Phone</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.SoDienThoai)</dd>

        <dt class="col-sm-3 fw-bold">Created Date</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.NgayTao)</dd>
    </dl>

    <form asp-action="Delete" onsubmit="return confirm('Are you sure you want to delete this user?');">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </form>
</div>

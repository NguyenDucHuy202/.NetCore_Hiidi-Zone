@model Hiidi_Zone_Ecommerce.Data.NguoiDung

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/Layout/Admin/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Edit User</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Ten" class="form-label fw-bold"></label>
                    <input asp-for="Ten" class="form-control" placeholder="Enter name" />
                    <span asp-validation-for="Ten" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MatKhau" class="form-label fw-bold"></label>
                    <input type="password" asp-for="MatKhau" class="form-control" placeholder="Enter password" />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SoDienThoai" class="form-label fw-bold"></label>
                    <input asp-for="SoDienThoai" class="form-control" placeholder="Enter phone number" />
                    <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NgayTao" class="form-label fw-bold"></label>
                    <input asp-for="NgayTao" class="form-control" type="date" />
                    <span asp-validation-for="NgayTao" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

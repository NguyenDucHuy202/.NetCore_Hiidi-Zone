@model Hiidi_Zone_Ecommerce.Data.HinhAnhSanPham

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/Layout/Admin/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Xác nhận xóa</h3>
        </div>
        <div class="card-body">
            <p class="text-danger"><strong>Bạn có chắc chắn muốn xóa mục này không?</strong></p>

            <div class="row">
                <div class="col-md-12">
                    <dl class="row">
                        <dt class="col-sm-3">Đường dẫn hình ảnh:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.DuongDan)</dd>

                        <dt class="col-sm-3">ID Sản phẩm:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.SanPham.Id)</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Xóa</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

@model Hiidi_Zone_Ecommerce.Data.NguoiDung

@{
    ViewData["Title"] = "User Profile";
    Layout = "~/Views/Shared/Layout/User/_LayoutUser.cshtml";
}

<div class="container " style="padding-top:150px">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-black text-white text-center">
                    <h3>Thông tin hồ sơ</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <strong>Họ và tên:</strong>
                        <span>@Model.Ten</span>
                        <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-field="Ten" class="text-primary">
                            <i class="fas fa-edit"></i>
                        </a>
                    </div>

                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <strong>Email:</strong>
                        <span>@Model.Email</span>
                        <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-field="Email" class="text-primary">
                            <i class="fas fa-edit"></i>
                        </a>
                    </div>

                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <strong>Phone Number:</strong>
                        <span>@Model.SoDienThoai</span>
                        <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-field="SoDienThoai" class="text-primary">
                            <i class="fas fa-edit"></i>
                        </a>
                    </div>
                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <strong>Địa chỉ:</strong>
                        <select id="diaChiSelect" name="diaChiId" class="mt-2 p-2 border rounded w-full text-gray-900">
                            @foreach (var diaChi in Model.DiaChiNguoiDungs)
                            {
                                <option value="@diaChi.Id">
                                    @diaChi.DiaChi, @diaChi.ThanhPho, @diaChi.QuocGia (@diaChi.MaBuuChinh)
                                </option>
                            }
                        </select>
                        <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-field="DiaChi" class="text-primary">
                            <i class="fas fa-edit"></i>
                        </a>
                    </div>

                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <strong>Created Date:</strong>
                        <span>@Model.NgayTao</span>
                        <span class="text-muted">
                            <i class="fas fa-lock"></i>
                        </span>
                    </div>
                </div>
            </div>
            <div class="text-center mt-3">
                <a asp-controller ="SanPhams" asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

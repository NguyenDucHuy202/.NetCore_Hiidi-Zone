@model IEnumerable<Hiidi_Zone_Ecommerce.Data.DonHang>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
    Layout = "~/Views/Shared/Layout/User/_LayoutUser.cshtml";
}

<div class="container" style="padding-top:135px" >
<h1 class="text-center mt-3">Danh sách đơn hàng</h1>

@if (!Model.Any())
{
    <div class="alert alert-warning text-center">
        Bạn chưa có đơn hàng nào.
    </div>
}
else
{
    <table class="table table-striped table-hover mt-4">
        <thead class="table-dark">
            <tr>
                <th>Mã Đơn Hàng</th>
                <th>Tổng Giá</th>
                <th>Trạng Thái</th>
                <th>Thanh Toán</th>
                <th>Ngày Tạo</th>
                <th>Người Đặt</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>#@item.Id</td>
                    <td><strong>@item.TongGia.ToString("N0") VNĐ</strong></td>
                    <td>
                        <span class="badge @(item.TrangThai == "Chờ xác nhận" ? "bg-warning" : "bg-success")">
                            @item.TrangThai
                        </span>
                    </td>
                    <td>
                        <span class="badge @(item.TrangThaiThanhToan == "Đã thanh toán" ? "bg-success" : "bg-danger")">
                            @item.TrangThaiThanhToan
                        </span>
                    </td>
                    <td>@item.NgayTao</td>
                   <td>@item.NguoiDung.Ten</td>
                    <td>
                            <a asp-asp-controller="Account" asp-action="ChiTietDonHang" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> Xem
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> Sửa
                        </a>
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
</div>
